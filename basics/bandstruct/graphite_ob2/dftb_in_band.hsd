Hamiltonian = DFTB {
  SCC = Yes
  SCCTolerance = 1.0e-3 # 0.001
  Charge =  0.0
  SlaterKosterFiles = Type2FileNames {
    Prefix = ".\ob2-1-1\base\"
    Separator = "-"
    Suffix = ".skf"
  }
  KPointsAndWeights = Klines {
     1  0.0   0.0   0.0 #G
    19  0.5   0.0   0.0 #M
    10  0.333 0.333 0.0 #K
    20  0.0   0.0   0.0 #G
    10  0.0   0.0   0.5 #A
  }
  MaxAngularMomentum {
    C = "p"
    #H = "s"
  }
  #ThirdOrderFull = Yes
  #HubbardDerivs {
  #  C = -0.1492
    #H = -0.1857
    #O = -0.1575
    #N = -0.1535
    #S = -0.11
    #P = -0.14
  #}
  #DampXH = Yes
  #DampXHExponent = 4.00
  #HCorrection = H5 {}
  Dispersion = DftD3 {
    Damping = BeckeJohnson {
      a1 = 0.717 #:base, 0.816:shift, 0.497:split
      a2 = 2.565 #:base, 2.057:shift, 3.622:split
    }
    s6 = 1.0
    s8 = 0.011 #:base, 0.010:shift, 0.010:split
    #Threebody = Yes
  }
}

Options = {
  WriteAutotestTag = Yes
}

ParserOptions = {
  ParserVersion = 6
}

